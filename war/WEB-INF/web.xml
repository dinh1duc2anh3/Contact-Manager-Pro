<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://JAVA.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
                             http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         version="2.5">
  
  <!-- Servlets -->
  <servlet>
    <servlet-name>greetServlet</servlet-name>
    <servlet-class>koolsoft.server.GreetingServiceImpl</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>greetServlet</servlet-name>
    <url-pattern>/demo2/greet</url-pattern>
  </servlet-mapping>
  
  <!-- Default page to serve -->
  <welcome-file-list>
    <welcome-file>Demo2.html</welcome-file>
  </welcome-file-list>
  
  <!-- Objectify Setup -->
  <listener>
    <listener-class>koolsoft.server.MyOfyHelper</listener-class>
  </listener>
  
  <filter>
    <filter-name>ObjectifyFilter</filter-name>
    <filter-class>koolsoft.server.MyObjectifyFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>ObjectifyFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
</web-app>