<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <g:DialogBox ui:field="dialogBox" animationEnabled="true" width="400px" autoHideEnabled="false" styleName="modal-content p-4">
        <g:VerticalPanel width="100%" spacing="10" styleName="container-fluid">
            <g:Label text="First Name:"  styleName="form-label"/>
            <g:TextBox ui:field="firstNameBox"  styleName="form-control"/>
            
            <g:Label text="Last Name:"  styleName="form-label"/>
            <g:TextBox ui:field="lastNameBox"  styleName="form-control"/>
            
            <g:Label text="Phone Number:" styleName="form-label"/>
            <g:TextBox ui:field="phoneNumberBox"  styleName="form-control"/>
            
            <g:Label text="Address:" styleName="form-label"/>
            <g:TextBox ui:field="addressBox" styleName="form-control" />
            
            <g:HorizontalPanel width="100%" styleName="mt-3 d-flex justify-content-end gap-2">
            	<g:Button ui:field="actionButton" styleName="btn btn-sm btn-primary" />
            	<g:Button ui:field="closeButton" text="Close" styleName="btn btn-sm btn-secondary"/>
            </g:HorizontalPanel>
        </g:VerticalPanel>
    </g:DialogBox>
</ui:UiBinder>
