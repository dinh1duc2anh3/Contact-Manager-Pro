<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <g:DialogBox ui:field="dialogBox"  animationEnabled="true" width="500px" height="500px" autoHideEnabled="false" 
    		addStyleNames="centered-dialog custom-dialog">
        <g:VerticalPanel width="100%" spacing="10" styleName="dialog-content p-4">
            <g:Label text="First Name:"  styleName="form-label"/>
            <g:TextBox ui:field="firstNameBox"  styleName="form-control"/>
            
            <g:Label text="Last Name:"  styleName="form-label"/>
            <g:TextBox ui:field="lastNameBox"  styleName="form-control"/>
            
            <g:Label text="Gender:" styleName="form-label"/>
			<g:ValueListBox ui:field="genderValueListBox"  />
            
            <g:Label text="Phone Number:" styleName="form-label"/>
            <g:TextBox ui:field="phoneNumberBox"  styleName="form-control"/>
            
            
            <g:Label text="Address:" styleName="form-label"/>
<!-- 			<g:ListBox ui:field="addressListBox" styleName="form-control" /> -->
			<g:ValueListBox ui:field="addressValueListBox"  />
            
            
            <g:HorizontalPanel width="100%" styleName="mt-3 d-flex justify-content-end gap-2">
            	<g:Button ui:field="actionButton" styleName="btn btn-sm btn-primary action-button" />
            	<g:Button ui:field="closeButton" text="Close" styleName="btn btn-sm btn-secondary"/>
            </g:HorizontalPanel>
        </g:VerticalPanel>
    </g:DialogBox>
</ui:UiBinder>
