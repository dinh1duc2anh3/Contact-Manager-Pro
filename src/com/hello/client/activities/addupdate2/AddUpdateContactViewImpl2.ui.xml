<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:b="urn:import:org.gwtbootstrap3.client.ui">
  <g:HTMLPanel>
    <g:VerticalPanel width="100%" spacing="10" styleName="p-4">
      <g:Label text="First Name:"/>
      <g:TextBox ui:field="firstNameBox" styleName="form-control"/>

      <g:Label text="Last Name:"/>
      <g:TextBox ui:field="lastNameBox" styleName="form-control"/>

      <g:Label text="Gender:"/>
      <g:ValueListBox ui:field="genderValueListBox" styleName="form-control"/>

      <g:Label text="Phone Number:"/>
      <g:TextBox ui:field="phoneNumberBox" styleName="form-control"/>

      <g:Label text="Address:"/>
      <g:ValueListBox ui:field="addressValueListBox" styleName="form-control"/>

      <g:HorizontalPanel width="100%" styleName="mt-3 d-flex justify-content-end gap-2">
        <g:Button ui:field="actionButton" styleName="btn btn-primary"/>
        <g:Button ui:field="closeButton" text="Close" styleName="btn btn-secondary"/>
      </g:HorizontalPanel>
    </g:VerticalPanel>
  </g:HTMLPanel>
</ui:UiBinder>
