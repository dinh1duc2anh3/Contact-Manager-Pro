<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <g:DialogBox ui:field="dialogBox" animationEnabled="true" width="400px" autoHideEnabled="false" glassEnabled="true" 
    		styleName="centered-dialog custom-dialog"> 
        <g:VerticalPanel styleName="dialog-content p-4" spacing="10">
            <g:Label ui:field="deleteConfirmLabel" text="Are you sure you want to delete this contact?"  styleName="modal-title"/>
            <g:HorizontalPanel styleName="modal-footer" spacing="5">
            	<g:Button ui:field="closeDeleteInfoButton" text="Close"  styleName="btn btn-sm btn-secondary"/>
            	<g:Button ui:field="deleteInfoButton" text="Delete"  styleName="btn btn-sm btn-danger" />
            </g:HorizontalPanel>
        </g:VerticalPanel>
    </g:DialogBox>
</ui:UiBinder>
